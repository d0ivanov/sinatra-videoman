<h3><%= video.title %></h3>
<video width="640" height="360" controls>
  <% video.video_files.each do |source| %>
    <source src=<%= source.file.url %> type=<%= source.content_type %> />
  <% end %>
    Your browser does not support the video tag.
</video>
<div id="description">
  <%= video.description %>
</div>
